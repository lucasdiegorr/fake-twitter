<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Entrar</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Digite seu email', input_html: { autocomplete: 'off', class: 'form-group form-control' }  %>
          <%= f.input :password, required: false, label: false, placeholder: 'Digite sua senha', input_html: { autocomplete: 'off', class: 'form-group form-control' }  %>
              <%= f.input :remember_me, input_html: {class: "checkbox"}, label: "Lembrar-me", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Entrar", class: 'btn btn-lg btn-primary btn-block' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>