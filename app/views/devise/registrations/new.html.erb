<div class="container content">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Criar Conta</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: 'Nome' %>
          <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: 'Nome' %>
          <%= f.input :email, required: true, label: false, placeholder: 'E-mail' %>
          <%= f.input :password, required: true, hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @validatable), label: false, placeholder: 'Senha' %>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Repita sua senha' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class: 'btn-primary' %>
        </div>
      <% end %>
      <hr>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>