<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Criar Conta</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <fieldset>
          <div class="form-group">
            <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: 'Primeiro Nome', input_html: { autocomplete: 'off', class: 'form-group form-control' }  %>
            <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: 'Ultimo Nome', input_html: { autocomplete: 'off', class: 'form-group form-control' } %>
            <%= f.input :email, required: true, label: false, placeholder: 'E-mail', input_html: { autocomplete: 'off', class: 'form-group form-control' } %>
            <%= f.input :password, required: true, hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @validatable), label: false, placeholder: 'Senha', input_html: { autocomplete: 'off', class: 'form-group form-control' }  %>
            <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Repita sua senha', input_html: { autocomplete: 'off', class: 'form-group form-control' } %>
          </div>
        </fieldset>

        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class: 'btn btn-lg btn-primary btn-block'%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>